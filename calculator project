#create a function
# addition
def add(a,b):
    c=a+b
    return c
#subraction
def sub(a,b):
    c=a-b
    return c
#multiplication
def mul(a,b):
    c=a*b
    return c
#division
def div(a,b):
    if b==0:
        return ("error division by  zero  ")
    c=a/b
    return c
#create awhile lopp

while True:
    print("=====claculator Menu=====")
    print("1.addition")
    print("2.subration")
    print("3.multiplication")
    print("4.division")

    choice=input("enter the number (1-5)")

    if choice=='5':
        print("enter valiable number,goodbye")
        break

    x=int(input("enter the number is :"))
    y=int(input("enter the number is :"))

#if and elif statement

    if choice=='1':
        print("after adding two number is :",add(x,y))
    elif choice=='2':
        print("after subraction two number is :",sub(x,y))
    elif choice=='3':
        print("after multiplition two number is :",mul(x,y))
    elif choice=='4':
        print("after division two number is :",div(x,y))
    else:
        print("Invalid choic eso pls enterthe number is ( 1-5)")

